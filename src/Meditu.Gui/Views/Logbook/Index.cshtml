@using System.Globalization;
@using System.IO;
@using System.Linq;
@using Meditu.Api;
@using Meditu.Gui.Models;

@model LogBookModel;

@{
    Layout = "_Content";
    TextInfo textInfo = CultureInfo.CurrentCulture.TextInfo;
    LogBook logBook = Model.Api.LogBook;
    IReadOnlySettingsManager settings = Model.Api.Settings;
}

@if( string.IsNullOrEmpty( Model.InfoMessage ) == false )
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-info alert-dismissable">
                <button class="close" type="button" data-dismiss="alert" aria-hidden="true">X</button>
                @Model.InfoMessage
            </div>
        </div>
    </div>
}

@if( string.IsNullOrEmpty( Model.ErrorMessage ) == false )
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-danger alert-dismissable">
                <button class="close" type="button" data-dismiss="alert" aria-hidden="true">X</button>
                @Model.ErrorMessage
            </div>
        </div>
    </div>
}

@if( logBook.TotalSessions == 0 )
{
    <p>No Sessions, yet.</p>
}
else
{
    @foreach( Log log in logBook )
    {
        string technique = textInfo.ToTitleCase( log.Technique );
        @if( string.IsNullOrEmpty( technique ) )
        {
            technique = "None";
        }
        <div class="row" id="log_@log.Guid">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3><strong>@log.StartTime.ToLocalTime().ToSettingsString( settings.DateTimeSettings )</strong> - @technique</h3>
                    </div>
                    <div class="panel-body">
                        <p><strong>Duration: </strong>@log.Duration.ToSettingsString( settings.DateTimeSettings )</p>
                        <p><strong>Comments:</strong></p>
                        @if (string.IsNullOrEmpty(log.Comments))
                        {
                            <p>None.</p>
                        }
                        else
                        {
                            @using( StringReader reader = new StringReader( log.Comments ) )
                            {
                                string line = reader.ReadLine();
                                while( line != null )
                                {
                                    <p>@line</p>
                                    line = reader.ReadLine();
                                }
                            }
                        }
                    </div>
                    <div class="panel-footer">
                        <a href="/LogBook/Log/@log.Guid" class="btn btn-inverse">
                            <i class="fa fa-search" aria-hidden="true"></i> View More
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
}